{
  "name": "doxyjs",
  "version": "1.2.0",
  "description": "Converts Javascript into psudo C++ for Doxygen",
  "main": "index.js",
  "author": "Dmitry Toropchin",
  "license": "MIT",
  "homepage": "https://github.com/dmitrytoropchin/doxyjs",
  "bugs": {
    "url": "https://github.com/dmitrytoropchin/doxyjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitrytoropchin/doxyjs.git"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "localize": "^0.4.7"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "jest": "^20.0.4"
  },
  "bin": {
    "doxyjs": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "cli",
    "doxygen"
  ],
  "scripts": {
    "build": "babel src --out-dir dist --source-maps inline --copy-files",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "pretest": "npm run build",
    "test": "jest"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/seeds/**",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  }
}
